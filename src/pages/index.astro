---
import VideoCards from "../components/VideoCards.astro";
import Layout from "../layouts/Layout.astro";
import PlayButton from "../assets/play.svg";
---

<Layout>
  <div class="container py-8">
    <h1 class="text-5xl font-bold">Video Cards</h1>
    <VideoCards server:defer>
      <div slot="fallback" class="flex gap-4 flex-wrap">
        {
          Array.from({ length: 3 }).map((_, i) => (
            <div class="border-2 p-4 rounded w-60 h-40 grid place-items-center animate-pulse">
              <PlayButton />
            </div>
          ))
        }
      </div>
    </VideoCards>
  </div>
</Layout>
